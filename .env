# Application Environment
APP_ENV=local                # Possible values: local, production, staging
APP_DEBUG=true               # Enables debug mode (set to false in production)
APP_URL=http://localhost     # Base URL of the application

# Database Configuration
DB_CONNECTION=mysql          # Type of database (MySQL, SQLite, PostgreSQL, etc.)
DB_HOST=127.0.0.1            # Database server host
DB_PORT=3306                 # Port number for the database connection
DB_DATABASE=mydatabase       # Name of the database
DB_USERNAME=user             # Database username
DB_PASSWORD=secretpassword   # Database password

# Mail Server Configuration (Optional)
MAIL_MAILER=smtp             # Mailer driver (smtp, sendmail, mail, etc.)
MAIL_HOST=smtp.mailtrap.io   # SMTP server host
MAIL_PORT=2525               # SMTP server port
MAIL_USERNAME=null           # SMTP username (for email services)
MAIL_PASSWORD=null           # SMTP password (for email services)
MAIL_ENCRYPTION=null         # Encryption method (tls/ssl)

# API Keys (Optional)
API_KEY_GOOGLE=your_google_api_key
API_KEY_STRIPE=your_stripe_api_key

# Cache and Session Configuration (Optional)
CACHE_DRIVER=file            # Cache storage (file, redis, etc.)
SESSION_DRIVER=file          # Session storage (file, redis, etc.)
SESSION_LIFETIME=120         # Session lifetime in minutes
